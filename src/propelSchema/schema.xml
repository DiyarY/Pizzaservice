<?xml version="1.0" encoding="UTF-8" ?>
<database name="pizzaService" defaultIDMethod="native">
    <table name="ingredients" phpName="Ingredient">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
        <column name="name" type="string" size="120" required="true" />
    </table>
    <table name="pizzas" phpName="Pizza">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
        <column name="name" type="string" size="120" required="true"/>
        <column name="price" type="float" required="true"/>
    </table>
    <table name="pizza_ingredients" phpName="Ingredient_pizza" isCrossRef="true">
        <column name="ingredients_id" type="integer" required="true" />
        <column name="pizzas_id" type="integer" required="true" />
        <foreign-key foreignTable="ingredients" phpName="Ingredient" refPhpName="pizza_ingredients">
            <reference local="ingredients_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="pizzas" phpName="Pizza" refPhpName="pizza_ingredients">
            <reference local="pizzas_id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="order_pizzas" phpName="Order_Pizza" isCrossRef="true">
        <column name="orders_id" type="integer" required="true"/>
        <column name="pizzas_id" type="integer" required="true" />
        <column name="amount" type="float" required="true" />
        <foreign-key foreignTable="orders" phpName="Order" refPhpName="Order_Pizza">
            <reference local="orders_id" foreign="id" />
        </foreign-key>
        <foreign-key foreignTable="pizzas" phpName="Pizza" refPhpName="Order_Pizza">
            <reference local="pizzas_id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="orders" phpName="Order">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="customers_id" type="integer" required="true"/>
        <column name="total" type="float" required="true" />
        <column name="created_at" type="timestamp" required="true" />
        <columnd name="completed_at" type="timestamp" required="true" />
        <foreign-key foreignTable="customers" phpName="Customer" refPhpName="Order">
            <reference local="customers_id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="customers" phpName="Customer">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
        <column name="firstname" type="string" size="255" required="true" />
        <column name="lastname" type="string" size="255" required="true" />
        <column name="zip" type="integer" required="true" />
        <column name="city" type="string" size="255" required="true" />
        <column name="country" type="string" size="255" required="true" />
    </table>
</database>